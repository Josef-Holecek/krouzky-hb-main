rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Uživatelé - vlastní profil
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Kroužky - všichni čtou, přihlášení vytváří/upravují
    match /clubs/{clubId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Podkolekce obrázků v kroužcích (pokud existuje)
    match /clubs/{clubId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Trenéři - všichni čtou, přihlášení vytváří/upravují
    match /trainers/{trainerId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Podkolekce obrázků v trenérech (pokud existuje)
    match /trainers/{trainerId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Uložené kroužky - ID formát: {userId}_{clubId}
    match /savedClubs/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
  }
}
