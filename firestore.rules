rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Uživatelé mohou číst a zapisovat svůj vlastní profil
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Kroužky - VŠICHNI mohou číst (i nepřihlášení), přihlášení mohou vytvářet a upravovat
    match /clubs/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Trenéři - VŠICHNI mohou číst (i nepřihlášení), přihlášení mohou vytvářet a upravovat
    match /trainers/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
